\begin_layout Standard
The discrete form of 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:FV-poisson-continuous"

\end_inset

 is given as
\begin_inset Formula \begin{equation}
\begin{array}{c}
\Op L{s_{v}}{s_{v}}\left(p\right)\end{array}=\Op I{S_{v}}{S_{v}}\left(\del{^{2}\rho}{t^{2}}\right)-\Omega_{x}-\Omega_{y}-\Omega_{z},\label{eq:FV-poisson-discrete}\end{equation}

\end_inset

 where 
\begin_inset Formula \begin{eqnarray}
\Op L{s_{v}}{s_{v}} & \equiv & \Op I{s_{s}}{s_{v}}\Op R{x_{v}}{s_{x}}\Op I{x_{x}}{x_{v}}\Op R{s_{v}}{x_{x}}\nonumber \\
 &  & +\Op I{s_{s}}{s_{v}}\Op R{y_{v}}{s_{y}}\Op I{y_{y}}{y_{v}}\Op R{s_{v}}{y_{y}}\nonumber \\
 &  & +\Op I{s_{s}}{s_{v}}\Op I{s_{s}}{s_{v}}\Op R{z_{v}}{s_{z}}\Op I{z_{z}}{z_{v}}\Op R{s_{v}}{z_{z}}\\
\Omega_{x} & \equiv & \Op I{s_{x}}{s_{v}}\Op R{x_{v}}{s_{x}}\Op I{x_{x}}{x_{v}}\left(\rho uu+\tau_{xx}\right)\nonumber \\
 &  & +\Op I{s_{y}}{s_{v}}\Op R{x_{v}}{s_{y}}\Op I{x_{y}}{x_{v}}\left(\rho uv+\tau_{yx}\right)\nonumber \\
 &  & +\Op I{s_{z}}{s_{v}}\Op R{x_{v}}{s_{z}}\Op I{x_{z}}{x_{v}}\left(\rho uw+\tau_{zx}\right),\label{eq:FV-poisson-xrhs}\\
\Omega_{y} & \equiv & \Op I{s_{y}}{s_{v}}\Op R{y_{v}}{s_{y}}\Op I{y_{x}}{y_{v}}\left(\rho vu+\tau_{xy}\right)\nonumber \\
 &  & +\Op I{s_{y}}{s_{v}}\Op R{y_{v}}{s_{y}}\Op I{y_{y}}{y_{v}}\left(\rho vv+\tau_{yy}\right)\nonumber \\
 &  & +\Op I{s_{z}}{s_{v}}\Op R{y_{v}}{s_{z}}\Op I{y_{z}}{y_{v}}\left(\rho vw+\tau_{zy}\right),\label{eq:FV-poisson-yrhs}\\
\Omega_{z} & \equiv & \Op I{s_{z}}{s_{v}}\Op R{z_{v}}{s_{z}}\Op I{z_{x}}{z_{v}}\left(\rho wu+\tau_{xz}\right)\nonumber \\
 &  & +\Op I{s_{y}}{s_{v}}\Op R{z_{v}}{s_{y}}\Op I{z_{y}}{z_{v}}\left(\rho uv+\tau_{yz}\right)\nonumber \\
 &  & +\Op I{s_{z}}{s_{v}}\Op R{z_{v}}{s_{z}}\Op I{z_{z}}{z_{v}}\left(\rho uw+\tau_{zz}\right).\label{eq:FV-poisson-zrhs}\end{eqnarray}

\end_inset

